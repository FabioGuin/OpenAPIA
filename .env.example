# OpenAPIA Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# =============================================================================
# VARIABLES USED IN OPENAPIA EXAMPLES AND DOCUMENTATION
# =============================================================================

# AI Model Providers
OPENAI_API_KEY=your_openai_api_key_here

# Database Connections
DB_API_KEY=your_database_api_key_here
DB_TOKEN=your_database_token_here
DB_PASSWORD=your_database_password_here
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Customer Database
CUSTOMER_DB_API_KEY=your_customer_db_api_key_here

# Order Database
ORDER_DB_API_KEY=your_order_db_api_key_here

# Knowledge Base MCP Server
KB_TOKEN=your_knowledge_base_token_here
KB_ACCESS_TOKEN=your_kb_access_token_here

# Redis & Caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Automation Integration
N8N_WEBHOOK_KEY=your_n8n_webhook_key_here
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url_here
ZAPIER_API_KEY=your_zapier_api_key_here

# External Services
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Generic API Key (for documentation examples)
API_KEY=your_generic_api_key_here

# Additional Zapier Webhooks (for multiple automation examples)
ZAPIER_WEBHOOK_URL_2=your_second_zapier_webhook_url_here
ZAPIER_WEBHOOK_URL_3=your_third_zapier_webhook_url_here
